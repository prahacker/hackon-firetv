<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101226">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/details_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.6"
                    android:contentDescription="@string/movie" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/details_banner_gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:padding="32dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/details_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#66000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                    <TextView
                        android:id="@+id/details_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/details_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:maxLines="3"
                        android:ellipsize="end"/>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/details_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <Button
                    android:id="@+id/create_room_button"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/btn_dark_rounded"
                    android:drawableStart="@drawable/ic_add"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Create Room"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/play_movie_button"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/btn_yellow_rounded"
                    android:drawableStart="@drawable/ic_play_arrow"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Play Video"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/add_watchlist_button"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/btn_dark_rounded"
                    android:drawableStart="@drawable/ic_add"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Add to My Watchlist"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/rate_video_button"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/btn_dark_rounded"
                    android:drawableStart="@drawable/ic_thumbs_up"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Rate This Video"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You May Also Like"
                android:textSize="22sp"
                android:textColor="#fff"
                android:paddingStart="24dp"
                android:paddingTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/similar_content_list"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendations"
                android:textSize="22sp"
                android:textColor="#fff"
                android:paddingStart="24dp"
                android:paddingTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendations_list"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/reasoning_popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="#E6222222"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="gone"
        android:fontFamily="@font/amazon_ember_lt"
        android:maxWidth="320dp" />

</FrameLayout>