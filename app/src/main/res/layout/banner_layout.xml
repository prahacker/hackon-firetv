<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bannerContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/bannerOverlay"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:paddingStart="32dp"
        android:paddingTop="36dp"
        android:paddingEnd="12dp"
        android:paddingBottom="32dp"
        android:gravity="start|top"
        android:background="@drawable/banner_overlay_gradient"
        android:elevation="8dp">

        <TextView
            android:id="@+id/bannerTitle"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#90000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/bannerRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_marginTop="8dp"

            android:progressTint="#FFFFFF"
            android:progressBackgroundTint="#444444"
            android:secondaryProgressTint="#888888" />




        <TextView
            android:id="@+id/bannerDescription"
            android:textColor="#E0E0E0"
            android:textSize="15sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>
